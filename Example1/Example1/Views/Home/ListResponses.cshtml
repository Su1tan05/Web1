@model IEnumerable<Example1.Models.GuestResponse>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Responses</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/style_List.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h2>Список</h2>
    </header>
    <div class="ttable">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Email</th>
                    <th scope="col">Номер телефона</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Example1.Models.GuestResponse r in Model)
                {
                <tr>
                    <td scope="row"></td>
                    <td scope="row">@r.Name</td>
                    <td scope="row">@r.Email</td>
                    <td scope="row">@r.Phone</td>
                </tr>
                }
            </tbody>
        </table>
        <div class="Click">
            <p><a asp-action="RsvpForm">Нажми для того чтобы вернуться назад</a></p>
        </div>
    </div>
</body>
</html>
